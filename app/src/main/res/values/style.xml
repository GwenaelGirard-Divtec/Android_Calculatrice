<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Styles général de l'application -->
    <style name="Theme.Calc" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customisation du thème !-->
        <item name="colorPrimary">@color/gray</item>
    </style>

    <!-- Style pour les boutons -->
        <!-- Boutons pleins-->
        <style name="Widget.Calculatrice.Button" parent="@style/Widget.MaterialComponents.Button">
            <item name="android:layout_weight">1</item>
            <item name="android:textSize">@dimen/main_button_textSize</item>
            <item name="backgroundTint">@color/gray</item>
            <item name="android:textColor">@color/white</item>
        </style>

        <!-- Boutons outlined -->
        <style name="Widget.Calculatrice.OutlinedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
            <item name="android:layout_weight">1</item>
            <item name="android:textSize">@dimen/main_button_textSize</item>
        </style>

        <!-- Boutons outlined gris foncé -->
        <style name="Widget.Calculatrice.Button.dark.outlined" parent="@style/Widget.Calculatrice.OutlinedButton">
            <item name="android:textColor">@color/gray_dark</item>
            <item name="strokeColor">@color/gray_dark</item>
            <item name="rippleColor">@color/gray_dark</item>
        </style>

        <!-- Boutons outlined rouges -->
        <style name="Widget.Calculatrice.Button.red.outlined" parent="@style/Widget.Calculatrice.OutlinedButton">
            <item name="android:textColor">@color/red</item>
            <item name="strokeColor">@color/red</item>
            <item name="rippleColor">@color/red</item>
        </style>
</resources>